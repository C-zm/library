
.use_pic{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  justify-content: center;
  align-items: center;
  background-color: green;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
  text-align: center;
}
page{
  background-color: #edece8;
}
.user_info_wrap{ 
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user_info_wrap .user_img_wrap{
  position: relative;
  background-color: grey;
}
.user_info_wrap .user_img_wrap .user_bg{
  height: 50vh;
  /* 高斯模糊 */
  filter: blur(8rpx);
}
.user_info_wrap .user_img_wrap .user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;  
}
.user_info_wrap .user_img_wrap .user_info .user_name{
  color: #fff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_info_wrap .user_btn button{
  position: absolute;
  left: 50%;
  width: 200rpx;
  transform: translateX(-50%);
  top: 40%;
  border:1rpx solid #fff;
  color:#fff;
  font-size: 35rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user_content{
  position: relative;
}
.user_content .user_main{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 100rpx;
}
.user_content .user_main .history_wrap{
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history_wrap navigator{
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
}
.user_content .user_main .history_wrap navigator .his_num{
  color: var(--themeColor);
}
.user_content .user_main .history_wrap navigator .his_name{
  color: grey;
}
.user_content .user_main .orders_wrap{
  background-color: #fff;
  margin-top: 15rpx;
}
.user_content .user_main .orders_wrap .orders_title{
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .orders_content{
  display: flex;
}
.user_content .user_main .orders_wrap .orders_content navigator{
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .user_main .orders_wrap .orders_content navigator .iconfont{
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .user_main .orders_wrap .orders_content navigator .order_name{
  color:grey;
}
.user_content .user_main .address_wrap{
  margin-top: 15rpx;
  padding: 15rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap{
  margin-top: 15rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item{
  border-bottom: 1rpx solid #ccc;
  padding: 15rpx;
}
.user_content .user_main .app_info_wrap .app_info_concact{
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap{
  margin-top: 15rpx;
  padding: 15rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .user_wrap{
  margin-top: 15rpx;
  padding: 15rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}