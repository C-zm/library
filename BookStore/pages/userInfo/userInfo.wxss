.user_detail{
  width: 90%;
  margin-left: 5%;
}
.user_detail .before_input{
  display: flex;
  margin-top: 20rpx;
  font-size: 28rpx;
  align-items: center;
}
.user_detail .before_input .input_text{
  flex: 1;
}
.user_detail .before_input input{
  flex: 4;
  border: solid #ccc 1rpx;
  padding-left: 5%;
  box-shadow: 0 20rpx 20rpx -20rpx gray;
}
.user_detail form button{
  margin-top: 50rpx;
}
.user_detail .before_input .input_pwd{
  flex: 1;  
  position:relative; 
}
.user_detail .before_input .input_pwd input{
  flex: 4;
  border: solid #ccc 1rpx;
  padding-left: 5%;
  box-shadow: 0 20rpx 20rpx -20rpx gray;  
}
.user_detail form .change_account{
  font-size: 24rpx;
  height: 52rpx;
  width: 120rpx;
  position: absolute;
  top:120rpx;
  right: 40rpx;
  border-radius: 0;
  z-index: 999;
}
.user_detail form .change_pwd{
  font-size: 24rpx;
  height: 52rpx;
  width: 120rpx;
  position: absolute;
  top:194rpx;
  right: 40rpx;
  border-radius: 0;
