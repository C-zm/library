
@import "./style/iconfont.wxss";

/* 在微信小程序中，不支持通配符‘*’，所以每个名称都要写进去 */
page, view, text, swiper, swiper-item, image, navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

page{
  /* 定义主题颜色 */
  --themeColor:#17a05d;
  /* 
    定义统一字体大小 假设设计稿大小为375px
    则：1px = 2rpx
        14px = 28rpx
  */
  font-size: 28rpx;
}
